---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import LoadingScreen from "../components/LoadingScreen.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="ko">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
				max-width: 800px;
				margin: 1.5em auto 0;
				padding: 0 1em;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border: 3px solid var(--border-window);
				box-shadow: var(--box-shadow-window);
			}

			/* Post content in browser frame */
			.post-browser {
				width: 800px;
				max-width: calc(100% - 2em);
				margin: 2em auto;
				border: 3px solid var(--border-window);
				box-shadow: var(--box-shadow-window);
				background: var(--bg-content);
			}
			.browser-titlebar {
				background: var(--accent-light);
				padding: 4px 10px;
				display: flex;
				align-items: center;
				justify-content: flex-end;
				min-height: 24px;
				border-bottom: 2px solid var(--border-window);
			}
			.browser-btn {
				width: 18px;
				height: 18px;
				border: 2px solid var(--border-window);
				background: var(--bg-window-body);
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 9px;
				color: var(--accent-dark);
				margin-left: 3px;
			}
			.browser-toolbar {
				background: var(--bg-window-body);
				padding: 6px 10px;
				display: flex;
				align-items: center;
				gap: 6px;
				border-bottom: 2px solid var(--border-window);
			}
			.browser-nav-btn {
				font-family: "DotGothic16", monospace;
				font-size: 14px;
				color: var(--accent-dark);
			}
			.browser-url {
				flex: 1;
				background: var(--bg-content);
				border: 2px solid var(--border-window);
				padding: 3px 8px;
				font-family: "DotGothic16", monospace;
				font-size: 11px;
				color: var(--text-muted);
				display: flex;
				align-items: center;
				gap: 4px;
			}

			.prose {
				padding: 2em 2.5em;
				color: var(--text-secondary);
			}
			.title-section {
				margin-bottom: 1.5em;
				padding-bottom: 1.5em;
				border-bottom: 2px dashed var(--border-color);
				text-align: center;
			}
			.title-section h1 {
				font-family: "DotGothic16", monospace;
				font-size: 1.8em;
				color: var(--accent-dark);
				margin: 0 0 0.75em;
				line-height: 1.3;
			}
			.date-badge {
				display: inline-flex;
				align-items: center;
				gap: 0.5em;
				margin-bottom: 0.5em;
				color: var(--text-muted);
				font-size: 0.85em;
				font-family: "DotGothic16", monospace;
				padding: 0.3em 0.8em;
				background: var(--bg-window-body);
				border: 2px solid var(--border-color);
			}
			.last-updated-on {
				font-style: italic;
				color: var(--text-muted);
				font-size: 0.82em;
				margin-top: 0.5em;
			}

			/* Article content styling */
			.prose :global(h2) {
				margin-top: 2.5em;
				padding-bottom: 0.3em;
				border-bottom: 2px dashed var(--border-color);
				font-family: "DotGothic16", monospace;
				color: var(--accent-dark);
			}
			.prose :global(h3) {
				margin-top: 2em;
				font-family: "DotGothic16", monospace;
				color: var(--text-primary);
			}
			.prose :global(img) {
				border: 2px solid var(--border-color);
				box-shadow: var(--box-shadow);
			}
			.prose :global(ul),
			.prose :global(ol) {
				padding-left: 1.5em;
			}
			.prose :global(li) {
				margin-bottom: 0.5em;
				color: var(--text-secondary);
			}

			/* Back link */
			.back-link {
				display: block;
				text-align: center;
				padding: 1em;
				font-family: "DotGothic16", monospace;
				font-size: 0.9em;
				color: var(--accent-dark);
				border-top: 2px dashed var(--border-color);
				text-decoration: none;
				transition: background var(--transition-fast);
			}
			.back-link:hover {
				background: rgba(255, 209, 220, 0.3);
				text-decoration: none;
			}

			@media (max-width: 768px) {
				.prose {
					padding: 1.5em 1em;
				}
				.title-section h1 {
					font-size: 1.3em;
				}
			}
		</style>
	</head>

	<body>
		<LoadingScreen />
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{
						heroImage && (
							<Image
								width={1020}
								height={510}
								src={heroImage}
								alt=""
							/>
						)
					}
				</div>
				<div class="post-browser">
					<div class="browser-titlebar">
						<div style="display:flex;gap:3px;">
							<span class="browser-btn">_</span>
							<span class="browser-btn">‚ñ°</span>
							<span class="browser-btn">‚úï</span>
						</div>
					</div>
					<div class="browser-toolbar">
						<span class="browser-nav-btn">‚Üê</span>
						<span class="browser-nav-btn">‚Üí</span>
						<span>üè†</span>
						<div class="browser-url">
							<span>üåê</span>
							suttolog.netlify.app/blog/post
						</div>
						<span>‚≠ê</span>
						<span>‚ò∞</span>
					</div>
					<div class="prose">
						<div class="title-section">
							<div class="date-badge">
								üìÖ <FormattedDate date={pubDate} />
							</div>
							{
								updatedDate && (
									<div class="last-updated-on">
										ÏµúÏ¢Ö ÏàòÏ†ï:{" "}
										<FormattedDate date={updatedDate} />
									</div>
								)
							}
							<h1>{title}</h1>
						</div>
						<slot />
						<a href="/blog" class="back-link">‚Üê Back to Blog</a>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
